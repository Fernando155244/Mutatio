<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1"
        android:gravity="center">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lyLogo"
            android:gravity="right">
            <ImageView
                android:src="@android:drawable/ic_menu_gallery"
               android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/Logo" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="76.0dp"
            android:id="@+id/lyConfirmacionTipoSolicitud"
            android:gravity="center_vertical">
            <TextView
                android:text="Solicitud de :"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblConfirmacionTipoSolicitudTitulo" 
                android:textSize="75px"/>
            <TextView
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtConfirmacionTipoSolicitudDato" 
                android:textSize="90px"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lyConfirmacionNombre"
            android:gravity="center_vertical">
            <TextView
                android:text="Nombre del Trabajador:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblConfirmacionNombreTitulo"
                android:textSize="75px"/>
            <TextView
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtConfirmacionNombreDato"
                android:textSize="90px"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="76.0dp"
            android:id="@+id/lyConfirmacionEstado"
            android:gravity="center_vertical">
            <TextView
                android:text="Estado Actual:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblConfirmacionEstadoTitulo" 
                android:textSize="75px"/>
            <TextView
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtConfiracionEstadoDato" 
                android:textSize="90px"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="76.0dp"
            android:id="@+id/lyConfirmOpcion1"
            android:gravity="center_vertical">
            <TextView
                android:text="Opción 1:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblConfirmacionOpcion1Titulo" 
                android:textSize="75px"/>
            <TextView
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtConfirmacionOpcion1Dato" 
                android:textSize="90px"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="76.0dp"
            android:id="@+id/lyConfirmOpcion2"
            android:gravity="center_vertical">
            <TextView
                android:text="Opción 2:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblConfirmacionOpcion2Titulo" 
                android:textSize="75px"/>
            <TextView
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtConfirmacionOpcion2Dato" 
                android:textSize="90px"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="76.0dp"
            android:id="@+id/lyConfirmacionNivel"
            android:gravity="center_vertical">
            <TextView
                android:text="Nivel Educativo:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblConfirmacionNivelTitulo"
                android:textSize="75px"/>
            <TextView
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtConfirmacionNivelDatos" 
                android:textSize="90px"/>
        </LinearLayout>
        <Button
            android:text="Consultar Estatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnConfirmacion" 
            android:textSize="90px"/>
    </LinearLayout>

</ScrollView>
