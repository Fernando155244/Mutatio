<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lyLogo"
            android:gravity="right">
            <ImageView
                android:src="@android:drawable/ic_menu_gallery"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/Logo" />
        </LinearLayout>
        <TextView
            android:text="Solicitud de: Numero:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtInicioDatosSolicitud" 
            android:textSize="80px"/>
        <TextView
            android:text="Del trabajador:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtInicioNombreSolicitante"
            android:layout_marginBottom="38.0dp" 
            android:textSize="80px"/>
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtInicioRegistrado"
            android:visibility="invisible"
            android:layout_marginBottom="40.5dp" 
            android:textSize="80px"/>
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtInicioCertificada"
            android:visibility="invisible"
            android:layout_marginBottom="40.5dp" 
            android:textSize="80px"/>
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtInicioConfirmacion"
            android:layout_marginBottom="51.0dp" 
            android:textSize="80px"/>
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtInicioValidada"
            android:visibility="invisible"
            android:layout_marginBottom="40.5dp" 
            android:textSize="80px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lyInicioEstatus"
            android:gravity="center_vertical">
            <TextView
                android:text="Estaus:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblInicioEstatusTitulo" 
                android:textSize="80px"/>
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtInicioEstatusDato" 
                android:textSize="80px"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lyObservaciones"
            android:gravity="center_vertical"
            android:layout_marginBottom="70.5dp">
            <TextView
                android:text="Observaciones:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblObservacionesTitulo" 
                android:textSize="80px"/>
            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtObservacionesDato" 
                android:textSize="80px"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lyInicioNotificacion"
            android:gravity="center">
            <ImageView
                android:src="@android:drawable/ic_menu_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblInicioNotificacionImagen" />
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtInicioNotificacionTitulo"
                android:gravity="center"
                android:textSize="80px"/>
            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtInicioNotificacionLeyenda"
                android:foregroundGravity="center"
                android:gravity="center" 
                android:textSize="80px"/>

        </LinearLayout>
        <TextView
            android:text="Preguntas Frecuentes"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblPregutnas"
            android:layout_marginTop="52.0dp"
            android:textSize="80px" />
    </LinearLayout>

</ScrollView>
